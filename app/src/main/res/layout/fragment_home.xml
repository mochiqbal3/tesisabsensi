<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/centerGradient"
    tools:context=".fragment.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/head_rounded_bottom"
            android:layout_height="70dp">
            <!--        <TextView-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_alignParentBottom="true"-->
            <!--            android:textSize="14sp"-->
            <!--            android:text="Selamat bekerja, "-->
            <!--            android:textColor="@android:color/white"-->
            <!--            android:layout_marginBottom="10dp"-->
            <!--            android:layout_marginLeft="40dp"-->
            <!--            android:id="@+id/tvHint"-->
            <!--            android:layout_height="wrap_content" />-->
            <!--        <TextView-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_alignParentBottom="true"-->
            <!--            android:textSize="14sp"-->
            <!--            android:id="@+id/tvNama"-->
            <!--            android:textStyle="bold"-->
            <!--            android:layout_toRightOf="@+id/tvHint"-->
            <!--            android:text="Selamat bekerja"-->
            <!--            android:textColor="@android:color/white"-->
            <!--            android:layout_marginBottom="10dp"-->
            <!--            android:layout_height="wrap_content"/>-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:textSize="24sp"
                android:layout_marginTop="10dp"
                android:id="@+id/tvTitle"
                android:text="Home"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_primary"
                    android:layout_margin="16dp"
                    android:padding="16dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="No Induk"
                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Nama"
                            android:layout_marginTop="4dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Kelas"
                            android:layout_marginTop="4dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text=":"
                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text=":"
                            android:layout_marginTop="4dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text=":"
                            android:layout_marginTop="4dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvNIM"
                            android:layout_width="wrap_content"
                            android:text="-"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="-"
                            android:textStyle="bold"
                            android:id="@+id/tvNama"
                            android:layout_marginTop="4dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="-"
                            android:textStyle="bold"
                            android:id="@+id/tvKelas"
                            android:layout_marginTop="4dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_primary"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:padding="16dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvTanggal"
                            android:layout_width="wrap_content"
                            android:text="Tanggal"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Masuk"
                            android:layout_marginTop="4dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Keluar"
                            android:layout_marginTop="4dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text=""
                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text=":"
                            android:layout_marginTop="4dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text=":"
                            android:layout_marginTop="4dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text=""
                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="-"
                            android:textStyle="bold"
                            android:id="@+id/tvMasuk"
                            android:layout_marginTop="4dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="-"
                            android:textStyle="bold"
                            android:id="@+id/tvKeluar"
                            android:layout_marginTop="4dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:padding="16dp"
                    android:id="@+id/alert"
                    android:background="@drawable/rounded_grey"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test"
                        android:id="@+id/tvAlert"
                        android:textColor="#e7026e"/>
                </LinearLayout>
            </LinearLayout>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:background="@color/colorPrimary"
                android:contentDescription="Absensi"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                app:borderWidth="0dp"
                android:id="@+id/fab"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/logo_absen"/>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>