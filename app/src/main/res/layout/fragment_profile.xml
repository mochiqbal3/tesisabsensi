                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Nama"
                            android:layout_marginTop="4dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Jenis Kelamin"
                            android:layout_marginTop="4dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Kelas"
                            android:layout_marginTop="4dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content"/>
